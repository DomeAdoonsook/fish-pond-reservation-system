<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>การจองของฉัน - LIFF</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * { font-family: 'Sarabun', sans-serif; }
    body {
      background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);
      min-height: 100vh;
      padding: 15px;
      padding-bottom: 50px;
    }
    .back-btn { color: white; text-decoration: none; display: inline-flex; align-items: center; gap: 5px; margin-bottom: 15px; }
    .page-title { color: white; font-size: 1.5rem; font-weight: 600; margin-bottom: 20px; text-align: center; }
    .tab-buttons { display: flex; gap: 10px; margin-bottom: 20px; }
    .tab-btn { flex: 1; padding: 12px; border: none; border-radius: 12px; background: rgba(255,255,255,0.2); color: white; font-weight: 500; }
    .tab-btn.active { background: white; color: #9b59b6; }
    .booking-card { background: white; border-radius: 15px; padding: 15px; margin-bottom: 15px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
    .booking-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 10px; }
    .booking-title { font-weight: 600; color: #333; }
    .booking-status { padding: 4px 12px; border-radius: 20px; font-size: 0.8rem; font-weight: 500; }
    .status-pending { background: #fff3cd; color: #856404; }
    .status-approved { background: #d4edda; color: #155724; }
    .status-rejected { background: #f8d7da; color: #721c24; }
    .booking-info { font-size: 0.9rem; color: #666; }
    .booking-date { font-size: 0.85rem; color: #888; margin-top: 8px; }
    .empty-state { text-align: center; color: white; padding: 40px 20px; }
    .loading { text-align: center; color: white; padding: 40px; }
  </style>
</head>
<body>
  <a href="/liff" class="back-btn"><i class="bi bi-arrow-left"></i> กลับ</a>
  <h1 class="page-title"><i class="bi bi-clock-history me-2"></i>การจองของฉัน</h1>

  <div class="tab-buttons">
    <button class="tab-btn active" onclick="showTab('ponds')">บ่อปลา</button>
    <button class="tab-btn" onclick="showTab('equipment')">อุปกรณ์</button>
    <button class="tab-btn" onclick="showTab('stock')">วัสดุ</button>
  </div>

  <div class="loading" id="loadingState">
    <div class="spinner-border text-light" role="status"></div>
    <p class="mt-2">กำลังโหลด...</p>
  </div>

  <div id="pondsTab" class="tab-content" style="display: none;"></div>
  <div id="equipmentTab" class="tab-content" style="display: none;"></div>
  <div id="stockTab" class="tab-content" style="display: none;"></div>

  <script src="https://static.line-scdn.net/liff/edge/2/sdk.js"></script>
  <script>
    const LIFF_ID = '2008768325-oHaS2ARL';
    let lineUserId = '';
    let data = { ponds: [], equipment: [], stock: [] };

    document.addEventListener('DOMContentLoaded', async () => {
      try {
        await liff.init({ liffId: LIFF_ID });
        if (liff.isLoggedIn()) {
          const profile = await liff.getProfile();
          lineUserId = profile.userId;
        } else {
          lineUserId = sessionStorage.getItem('lineUserId') || '';
        }

        if (lineUserId) {
          await loadBookings();
        } else {
          showEmptyState('กรุณาเข้าสู่ระบบ LINE');
        }
      } catch (e) {
        lineUserId = sessionStorage.getItem('lineUserId') || '';
        if (lineUserId) await loadBookings();
        else showEmptyState('กรุณาเข้าสู่ระบบ LINE');
      }
    });

    async function loadBookings() {
      try {
        const res = await fetch(`/liff/api/my-bookings/${lineUserId}`);
        const result = await res.json();
        if (result.success) {
          data = result;
          document.getElementById('loadingState').style.display = 'none';
          showTab('ponds');
        }
      } catch (e) {
        showEmptyState('เกิดข้อผิดพลาดในการโหลดข้อมูล');
      }
    }

    function showTab(tab) {
      document.querySelectorAll('.tab-btn').forEach((btn, i) => {
        btn.classList.toggle('active', ['ponds', 'equipment', 'stock'][i] === tab);
      });

      document.querySelectorAll('.tab-content').forEach(el => el.style.display = 'none');
      document.getElementById(`${tab}Tab`).style.display = 'block';

      renderTab(tab);
    }

    function renderTab(tab) {
      const container = document.getElementById(`${tab}Tab`);
      const items = data[tab] || [];

      if (items.length === 0) {
        container.innerHTML = `
          <div class="empty-state">
            <i class="bi bi-inbox" style="font-size: 3rem;"></i>
            <p class="mt-2">ไม่มีรายการ</p>
          </div>
        `;
        return;
      }

      container.innerHTML = items.map(item => {
        let title, info, date, status;

        if (tab === 'ponds') {
          title = item.pond_name || `บ่อ #${item.pond_id}`;
          info = item.purpose || '-';
          date = `${formatDate(item.start_date)} - ${formatDate(item.end_date)}`;
          status = item.status;
        } else if (tab === 'equipment') {
          title = item.equipment_name || `อุปกรณ์ #${item.equipment_id}`;
          info = `จำนวน: ${item.quantity}`;
          date = `ยืม: ${formatDate(item.borrow_date)}`;
          status = item.status;
        } else {
          title = `คำขอเบิก #${item.id}`;
          info = item.purpose || '-';
          date = formatDate(item.created_at);
          status = item.status;
        }

        const statusClass = status === 'approved' ? 'status-approved' :
                           status === 'rejected' ? 'status-rejected' : 'status-pending';
        const statusText = status === 'approved' ? 'อนุมัติ' :
                          status === 'rejected' ? 'ไม่อนุมัติ' : 'รออนุมัติ';

        return `
          <div class="booking-card">
            <div class="booking-header">
              <span class="booking-title">${title}</span>
              <span class="booking-status ${statusClass}">${statusText}</span>
            </div>
            <div class="booking-info">${info}</div>
            <div class="booking-date"><i class="bi bi-calendar3 me-1"></i>${date}</div>
          </div>
        `;
      }).join('');
    }

    function formatDate(dateStr) {
      if (!dateStr) return '-';
      const d = new Date(dateStr);
      return d.toLocaleDateString('th-TH', { day: 'numeric', month: 'short', year: '2-digit' });
    }

    function showEmptyState(message) {
      document.getElementById('loadingState').innerHTML = `
        <div class="empty-state">
          <i class="bi bi-exclamation-circle" style="font-size: 3rem;"></i>
          <p class="mt-2">${message}</p>
        </div>
      `;
    }
  </script>
</body>
</html>
