<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>จัดการ Stock วัสดุ - ระบบงานฟาร์ม</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="wrapper">
    <%- include('../../partials/sidebar-admin', { page: 'stock-items', isLoggedIn: true, admin, pendingCount, cancelPendingCount: cancelPendingCount || 0, equipmentPendingCount: equipmentPendingCount || 0, stockPendingCount: stockPendingCount || 0 }) %>

    <div id="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark"><i class="bi bi-list"></i></button>
          <span class="navbar-brand ms-3 mb-0 h5"><i class="bi bi-archive"></i> จัดการ Stock วัสดุ</span>
          <div class="ms-auto">
            <button class="btn btn-outline-secondary btn-sm me-2" data-bs-toggle="modal" data-bs-target="#categoryModal">
              <i class="bi bi-folder-plus"></i> จัดการหมวดหมู่
            </button>
            <button class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#itemModal" onclick="openAddItem()">
              <i class="bi bi-plus-lg"></i> เพิ่มวัสดุ
            </button>
          </div>
        </div>
      </nav>

      <div class="container-fluid p-4">
        <!-- Low Stock Alert -->
        <% if (lowStockItems && lowStockItems.length > 0) { %>
          <div class="alert alert-warning alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>วัสดุใกล้หมด!</strong>
            <% lowStockItems.forEach(function(item, index) { %>
              <%= item.name %> (เหลือ <%= item.current_quantity %> <%= item.unit %>)<%= index < lowStockItems.length - 1 ? ', ' : '' %>
            <% }); %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
          </div>
        <% } %>

        <!-- Filters -->
        <div class="card mb-4">
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-4">
                <label class="form-label">หมวดหมู่</label>
                <select class="form-select" id="filterCategory" onchange="filterTable()">
                  <option value="">ทั้งหมด</option>
                  <% categories.forEach(function(c) { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                  <% }); %>
                  <option value="none">ไม่มีหมวดหมู่</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">สถานะ</label>
                <select class="form-select" id="filterStatus" onchange="filterTable()">
                  <option value="">ทั้งหมด</option>
                  <option value="active">ใช้งาน</option>
                  <option value="inactive">ปิดใช้งาน</option>
                  <option value="low">ใกล้หมด</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">ค้นหา</label>
                <input type="text" class="form-control" id="filterSearch" placeholder="ค้นหาชื่อวัสดุ..." oninput="filterTable()">
              </div>
            </div>
          </div>
        </div>

        <!-- Items Table -->
        <% if (items.length === 0) { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="bi bi-archive text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">ยังไม่มีรายการวัสดุ</h5>
              <button class="btn btn-success mt-3" data-bs-toggle="modal" data-bs-target="#itemModal" onclick="openAddItem()">
                <i class="bi bi-plus-lg me-2"></i>เพิ่มวัสดุ
              </button>
            </div>
          </div>
        <% } else { %>
          <div class="table-responsive">
            <table class="table table-hover bg-white rounded shadow-sm" id="stockTable">
              <thead class="table-dark">
                <tr>
                  <th>ชื่อวัสดุ</th>
                  <th>หมวดหมู่</th>
                  <th class="text-center">คงเหลือ</th>
                  <th class="text-center">จุดสั่งซื้อ</th>
                  <th class="text-end">ราคา/หน่วย</th>
                  <th>สถานะ</th>
                  <th class="text-center">จัดการ</th>
                </tr>
              </thead>
              <tbody>
                <% items.forEach(function(item) { %>
                  <% const isLow = item.current_quantity <= item.min_quantity; %>
                  <tr data-category="<%= item.category_id || 'none' %>" data-status="<%= item.status %>" data-low="<%= isLow %>">
                    <td class="fw-bold">
                      <%= item.name %>
                      <% if (isLow) { %>
                        <i class="bi bi-exclamation-triangle text-warning ms-1" title="ใกล้หมด"></i>
                      <% } %>
                    </td>
                    <td><%= item.category_name || '-' %></td>
                    <td class="text-center">
                      <span class="<%= isLow ? 'text-danger fw-bold' : 'text-success' %>">
                        <%= item.current_quantity %> <%= item.unit %>
                      </span>
                    </td>
                    <td class="text-center text-muted"><%= item.min_quantity %> <%= item.unit %></td>
                    <td class="text-end"><%= item.unit_price ? item.unit_price.toLocaleString() + ' บาท' : '-' %></td>
                    <td>
                      <% if (item.status === 'active') { %>
                        <span class="badge bg-success">ใช้งาน</span>
                      <% } else { %>
                        <span class="badge bg-secondary">ปิดใช้งาน</span>
                      <% } %>
                    </td>
                    <td class="text-center">
                      <button class="btn btn-info btn-sm" onclick='openEditItem(<%= JSON.stringify(item) %>)' title="แก้ไข">
                        <i class="bi bi-pencil"></i>
                      </button>
                      <button class="btn btn-danger btn-sm" onclick="deleteItem(<%= item.id %>, '<%= item.name %>')" title="ลบ">
                        <i class="bi bi-trash"></i>
                      </button>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Category Modal -->
  <div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title"><i class="bi bi-folder me-2"></i>จัดการหมวดหมู่วัสดุ</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addCategoryForm" class="mb-4">
            <div class="row g-2">
              <div class="col-md-5">
                <input type="text" class="form-control" id="newCategoryName" placeholder="ชื่อหมวดหมู่" required>
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control" id="newCategoryDesc" placeholder="คำอธิบาย (ไม่บังคับ)">
              </div>
              <div class="col-md-2">
                <button type="submit" class="btn btn-success w-100"><i class="bi bi-plus-lg"></i> เพิ่ม</button>
              </div>
            </div>
          </form>
          <table class="table table-sm">
            <thead class="table-light">
              <tr>
                <th>ชื่อหมวดหมู่</th>
                <th>คำอธิบาย</th>
                <th class="text-center">จำนวนวัสดุ</th>
                <th class="text-center">จัดการ</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(function(c) { %>
                <tr>
                  <td><%= c.name %></td>
                  <td><%= c.description || '-' %></td>
                  <td class="text-center"><%= c.item_count || 0 %></td>
                  <td class="text-center">
                    <button class="btn btn-warning btn-sm" onclick="editCategory(<%= c.id %>, '<%= c.name %>', '<%= c.description || '' %>')">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deleteCategory(<%= c.id %>, '<%= c.name %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Item Modal -->
  <div class="modal fade" id="itemModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header bg-success text-white">
          <h5 class="modal-title" id="itemModalTitle"><i class="bi bi-box-seam me-2"></i>เพิ่มวัสดุ</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <form id="itemForm">
          <div class="modal-body">
            <input type="hidden" id="itemId">
            <div class="mb-3">
              <label class="form-label">ชื่อวัสดุ <span class="text-danger">*</span></label>
              <input type="text" class="form-control" id="itemName" required>
            </div>
            <div class="mb-3">
              <label class="form-label">หมวดหมู่</label>
              <select class="form-select" id="itemCategory">
                <option value="">-- ไม่ระบุ --</option>
                <% categories.forEach(function(c) { %>
                  <option value="<%= c.id %>"><%= c.name %></option>
                <% }); %>
              </select>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">หน่วยนับ</label>
                <input type="text" class="form-control" id="itemUnit" value="หน่วย">
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">ราคาต่อหน่วย (บาท)</label>
                <input type="number" class="form-control" id="itemPrice" step="0.01" min="0">
              </div>
            </div>
            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label">จำนวนปัจจุบัน</label>
                <input type="number" class="form-control" id="itemQuantity" step="0.01" min="0" value="0">
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label">จุดสั่งซื้อ (แจ้งเตือนเมื่อต่ำกว่า)</label>
                <input type="number" class="form-control" id="itemMinQuantity" step="0.01" min="0" value="0">
              </div>
            </div>
            <div class="mb-3">
              <label class="form-label">รายละเอียด</label>
              <textarea class="form-control" id="itemDescription" rows="2"></textarea>
            </div>
            <div class="mb-3" id="statusField" style="display: none;">
              <label class="form-label">สถานะ</label>
              <select class="form-select" id="itemStatus">
                <option value="active">ใช้งาน</option>
                <option value="inactive">ปิดใช้งาน</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
            <button type="submit" class="btn btn-success" id="itemSubmitBtn">บันทึก</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    let isEditMode = false;

    function filterTable() {
      const category = document.getElementById('filterCategory').value;
      const status = document.getElementById('filterStatus').value;
      const search = document.getElementById('filterSearch').value.toLowerCase();
      const rows = document.querySelectorAll('#stockTable tbody tr');
      rows.forEach(row => {
        const rowCategory = row.dataset.category;
        const rowStatus = row.dataset.status;
        const rowLow = row.dataset.low === 'true';
        const rowText = row.textContent.toLowerCase();

        let matchCategory = !category || rowCategory === category;
        let matchStatus = !status || rowStatus === status || (status === 'low' && rowLow);
        let matchSearch = !search || rowText.includes(search);

        row.style.display = (matchCategory && matchStatus && matchSearch) ? '' : 'none';
      });
    }

    function openAddItem() {
      isEditMode = false;
      document.getElementById('itemModalTitle').innerHTML = '<i class="bi bi-box-seam me-2"></i>เพิ่มวัสดุ';
      document.getElementById('itemForm').reset();
      document.getElementById('itemId').value = '';
      document.getElementById('statusField').style.display = 'none';
      document.getElementById('itemQuantity').closest('.col-md-6').style.display = '';
    }

    function openEditItem(item) {
      isEditMode = true;
      document.getElementById('itemModalTitle').innerHTML = '<i class="bi bi-pencil me-2"></i>แก้ไขวัสดุ';
      document.getElementById('itemId').value = item.id;
      document.getElementById('itemName').value = item.name;
      document.getElementById('itemCategory').value = item.category_id || '';
      document.getElementById('itemUnit').value = item.unit || 'หน่วย';
      document.getElementById('itemPrice').value = item.unit_price || '';
      document.getElementById('itemQuantity').value = item.current_quantity || 0;
      document.getElementById('itemMinQuantity').value = item.min_quantity || 0;
      document.getElementById('itemDescription').value = item.description || '';
      document.getElementById('itemStatus').value = item.status || 'active';
      document.getElementById('statusField').style.display = '';
      document.getElementById('itemQuantity').closest('.col-md-6').style.display = 'none';
      new bootstrap.Modal(document.getElementById('itemModal')).show();
    }

    document.getElementById('itemForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const id = document.getElementById('itemId').value;
      const data = {
        name: document.getElementById('itemName').value,
        category_id: document.getElementById('itemCategory').value || null,
        unit: document.getElementById('itemUnit').value,
        unit_price: document.getElementById('itemPrice').value,
        current_quantity: document.getElementById('itemQuantity').value,
        min_quantity: document.getElementById('itemMinQuantity').value,
        description: document.getElementById('itemDescription').value,
        status: document.getElementById('itemStatus').value
      };

      try {
        const url = isEditMode ? `/admin/stock/item/${id}` : '/admin/stock/item';
        const method = isEditMode ? 'PUT' : 'POST';
        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const result = await res.json();
        if (result.success) {
          location.reload();
        } else {
          alert(result.error || 'เกิดข้อผิดพลาด');
        }
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    });

    async function deleteItem(id, name) {
      if (!confirm(`ยืนยันการลบวัสดุ "${name}"?`)) return;
      try {
        const res = await fetch(`/admin/stock/item/${id}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          location.reload();
        } else {
          alert(data.error || 'ไม่สามารถลบได้');
        }
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    }

    // Category functions
    document.getElementById('addCategoryForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = document.getElementById('newCategoryName').value;
      const description = document.getElementById('newCategoryDesc').value;
      try {
        const res = await fetch('/admin/stock/category', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, description })
        });
        const data = await res.json();
        if (data.success) {
          location.reload();
        } else {
          alert(data.error || 'ไม่สามารถเพิ่มได้');
        }
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    });

    function editCategory(id, name, desc) {
      const newName = prompt('ชื่อหมวดหมู่:', name);
      if (!newName) return;
      const newDesc = prompt('คำอธิบาย:', desc);
      fetch(`/admin/stock/category/${id}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: newName, description: newDesc })
      }).then(res => res.json()).then(data => {
        if (data.success) location.reload();
        else alert(data.error || 'ไม่สามารถแก้ไขได้');
      });
    }

    async function deleteCategory(id, name) {
      if (!confirm(`ยืนยันการลบหมวดหมู่ "${name}"?`)) return;
      try {
        const res = await fetch(`/admin/stock/category/${id}`, { method: 'DELETE' });
        const data = await res.json();
        if (data.success) {
          location.reload();
        } else {
          alert(data.error || 'ไม่สามารถลบได้');
        }
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    }
  </script>
</body>
</html>
