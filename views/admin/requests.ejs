<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>คำขอใช้บ่อ - ระบบจัดการบ่อเลี้ยงปลา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="wrapper">
    <%- include('../partials/sidebar-admin', { page: 'requests', isLoggedIn, admin, pendingCount, cancelPendingCount: cancelPendingCount || 0, equipmentPendingCount: equipmentPendingCount || 0 }) %>

    <div id="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark"><i class="bi bi-list"></i></button>
          <span class="navbar-brand ms-3 mb-0 h5"><i class="bi bi-clipboard-check"></i> คำขอใช้บ่อ</span>
        </div>
      </nav>

      <div class="container-fluid p-4">
        <% if (reservations.length === 0) { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">ไม่มีคำขอใช้บ่อที่รออนุมัติ</h5>
            </div>
          </div>
        <% } else { %>
          <div class="row">
            <% reservations.forEach(function(r) { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 request-card" id="request-<%= r.id %>">
                  <div class="card-header bg-warning">
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="fw-bold">#REQ-<%= String(r.id).padStart(4, '0') %></span>
                      <span class="badge bg-dark">รออนุมัติ</span>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-droplet text-primary"></i> บ่อ <%= r.pond_code %></h5>
                    <hr>
                    <table class="table table-sm table-borderless mb-0">
                      <tr><td class="text-muted" width="40%">ผู้ขอ:</td><td class="fw-bold"><%= r.user_name %></td></tr>
                      <tr><td class="text-muted">ชนิดปลา:</td><td><%= r.fish_type %></td></tr>
                      <tr><td class="text-muted">จำนวน:</td><td><%= r.fish_quantity ? r.fish_quantity.toLocaleString() : 0 %> ตัว</td></tr>
                      <tr><td class="text-muted">วันเริ่ม:</td><td><%= r.start_date %></td></tr>
                      <tr><td class="text-muted">วันสิ้นสุด:</td><td><%= r.end_date %></td></tr>
                    </table>
                  </div>
                  <div class="card-footer">
                    <% if (isLoggedIn) { %>
                      <div class="d-flex gap-2">
                        <button class="btn btn-success flex-fill" onclick="approveRequest(<%= r.id %>)"><i class="bi bi-check-lg"></i> อนุมัติ</button>
                        <button class="btn btn-danger flex-fill" onclick="showRejectModal(<%= r.id %>)"><i class="bi bi-x-lg"></i> ไม่อนุมัติ</button>
                      </div>
                    <% } else { %>
                      <a href="/admin/login" class="btn btn-outline-primary w-100"><i class="bi bi-box-arrow-in-right"></i> เข้าสู่ระบบเพื่ออนุมัติ</a>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>

        <div class="modal fade" id="rejectModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>ไม่อนุมัติคำขอ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <input type="hidden" id="rejectId">
                <div class="mb-3">
                  <label class="form-label">เหตุผล (ถ้ามี)</label>
                  <textarea class="form-control" id="rejectReason" rows="3" placeholder="ระบุเหตุผลที่ไม่อนุมัติ..."></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-danger" onclick="rejectRequest()"><i class="bi bi-x-lg"></i> ยืนยันไม่อนุมัติ</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    async function approveRequest(id) {
      if (!confirm('ยืนยันการอนุมัติคำขอนี้?')) return;
      try {
        const res = await fetch('/admin/requests/' + id + '/approve', { method: 'POST', headers: { 'Content-Type': 'application/json' } });
        const data = await res.json();
        if (data.success) { document.getElementById('request-' + id).remove(); showToast('อนุมัติคำขอเรียบร้อย', 'success'); updatePendingCount(); }
      } catch (err) { showToast('เกิดข้อผิดพลาด', 'danger'); }
    }
    function showRejectModal(id) {
      document.getElementById('rejectId').value = id;
      document.getElementById('rejectReason').value = '';
      new bootstrap.Modal(document.getElementById('rejectModal')).show();
    }
    async function rejectRequest() {
      const id = document.getElementById('rejectId').value;
      const reason = document.getElementById('rejectReason').value;
      try {
        const res = await fetch('/admin/requests/' + id + '/reject', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ reason }) });
        const data = await res.json();
        if (data.success) { bootstrap.Modal.getInstance(document.getElementById('rejectModal')).hide(); document.getElementById('request-' + id).remove(); showToast('ไม่อนุมัติคำขอเรียบร้อย', 'warning'); updatePendingCount(); }
      } catch (err) { showToast('เกิดข้อผิดพลาด', 'danger'); }
    }
    function updatePendingCount() {
      const badge = document.querySelector('a[href="/admin/requests"] .badge');
      const cards = document.querySelectorAll('.request-card');
      if (badge) { if (cards.length > 0) { badge.textContent = cards.length; } else { badge.remove(); location.reload(); } }
    }
  </script>
</body>
</html>
