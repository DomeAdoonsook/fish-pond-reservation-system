                  'G1': { left: 70.27, top: 20.12, width: 2 },
                  'G2': { left: 68.09, top: 39.01, width: 2 },
                  'G3': { left: 79.18, top: 10.22, width: 2 },
                  'G4': { left: 80, top: 15.22, width: 2 },
                  'G5': { left: 80.73, top: 19.72, width: 2 },
                  'G6': { left: 81.36, top: 24.46, width: 2 },
                  'G7': { left: 81.82, top: 28.83, width: 2 },
                  'G8': { left: 82.64, top: 33.32, width: 2 },
                  'G10': { left: 88, top: 48.89, width: 2 }
                };

                // ใช้ตำแหน่ง hardcoded เท่านั้น (ไม่ใช้จาก database เพื่อให้ขนาดเท่ากันทุกบ่อ)
                const pondPositions = defaultPositions;

                ponds.forEach(function(pond) {
                  const pos = pondPositions[pond.pond_code];
                  if (pos) {
                    let statusClass = 'available';
                    if (pond.user_name) {
                      statusClass = 'occupied';
                    } else if (pond.status === 'maintenance') {
                      statusClass = 'maintenance';
                    } else if (pond.status === 'pending') {
                      statusClass = 'pending';
                    }
                %>
                  <div class="pond-area <%= statusClass %>"
                       data-pond-id="<%= pond.id %>"
                       data-pond-code="<%= pond.pond_code %>"
                       onclick="showPondModal(<%= pond.id %>)"
                       style="left: <%= pos.left %>%; top: <%= pos.top %>%; width: <%= pos.width %>%;">
                    <%= pond.pond_code %>
                  </div>
                <%
                  }
                });
                %>
              </div>
            </div>
          </div>
        </div>

        <!-- Pond Detail Modal -->
        <div class="modal fade" id="pondModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">
                  <i class="bi bi-droplet me-2"></i>
                  <span id="modalPondCode">บ่อ</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body" id="modalPondBody">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                <a href="#" class="btn btn-primary" id="modalViewDetail">ดูรายละเอียด</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    const pondsData = <%- JSON.stringify(ponds) %>;
    const pondModal = new bootstrap.Modal(document.getElementById('pondModal'));

    function showPondModal(pondId) {
      const pond = pondsData.find(p => p.id === pondId);
      if (!pond) return;

      document.getElementById('modalPondCode').textContent = 'บ่อ ' + pond.pond_code;
      document.getElementById('modalViewDetail').href = '/admin/pond/' + pondId;

      let statusBadge = '';
      let statusText = '';
      if (pond.user_name) {
        statusBadge = '<span class="badge bg-danger">ใช้งาน</span>';
        statusText = 'กำลังใช้งานโดย ' + pond.user_name;
      } else if (pond.status === 'maintenance') {
        statusBadge = '<span class="badge bg-secondary">ปิดปรับปรุง</span>';
        statusText = 'บ่อปิดปรับปรุง';
      } else {
        statusBadge = '<span class="badge bg-success">ว่าง</span>';
        statusText = 'พร้อมให้จอง';
      }

      let html = `
        <table class="table table-sm table-borderless">
          <tr>
            <td class="text-muted" width="35%">รหัสบ่อ:</td>
            <td class="fw-bold">${pond.pond_code}</td>
          </tr>
          <tr>
            <td class="text-muted">โซน:</td>
            <td>${pond.zone}</td>
          </tr>
          <tr>
            <td class="text-muted">ขนาด:</td>
            <td>${pond.size === 'large' ? 'ใหญ่' : pond.size === 'medium' ? 'กลาง' : 'เล็ก'}</td>
          </tr>
          <tr>
            <td class="text-muted">สถานะ:</td>
            <td>${statusBadge}</td>
          </tr>
        </table>
      `;

      if (pond.user_name) {
        html += `
          <hr>
          <h6><i class="bi bi-person me-2"></i>ข้อมูลการใช้งาน</h6>
          <table class="table table-sm table-borderless">
            <tr>
              <td class="text-muted" width="35%">ผู้ใช้:</td>
              <td class="fw-bold">${pond.user_name}</td>
            </tr>
            <tr>
              <td class="text-muted">ชนิดปลา:</td>
              <td>${pond.fish_type || '-'}</td>
            </tr>
            <tr>
              <td class="text-muted">จำนวน:</td>
              <td>${pond.fish_quantity ? pond.fish_quantity.toLocaleString() + ' ตัว' : '-'}</td>
            </tr>
            <tr>
              <td class="text-muted">อายุปลา:</td>
              <td><span class="badge bg-info">${pond.fish_age_days || 0} วัน</span></td>
            </tr>
          </table>
        `;
      }

      document.getElementById('modalPondBody').innerHTML = html;
      pondModal.show();
    }

    // Tooltip functionality
    const tooltip = document.getElementById('pondTooltip');

    document.querySelectorAll('.pond-area').forEach(el => {
      el.addEventListener('mouseenter', function(e) {
        const pondId = parseInt(this.dataset.pondId);
        const pond = pondsData.find(p => p.id === pondId);
        if (!pond) return;

        let statusClass = 'status-available';
        let statusText = 'ว่าง';
        if (pond.user_name) {
          statusClass = 'status-occupied';
          statusText = 'ใช้งาน';
        } else if (pond.status === 'maintenance') {
          statusClass = 'status-maintenance';
          statusText = 'ปิดปรับปรุง';
        } else if (pond.status === 'pending') {
          statusClass = 'status-pending';
          statusText = 'รออนุมัติ';
        }

        let html = `
          <div class="tooltip-title">บ่อ ${pond.pond_code}</div>
          <div class="tooltip-row">
            <span class="tooltip-label">สถานะ:</span>
            <span class="status-badge ${statusClass}">${statusText}</span>
          </div>
        `;

        if (pond.user_name) {
          html += `
            <div class="tooltip-row">
              <span class="tooltip-label">ผู้เลี้ยง:</span>
              <span class="tooltip-value">${pond.user_name}</span>
            </div>
            <div class="tooltip-row">
              <span class="tooltip-label">ชนิดปลา:</span>
              <span class="tooltip-value">${pond.fish_type || '-'}</span>
            </div>
            <div class="tooltip-row">
              <span class="tooltip-label">จำนวน:</span>
              <span class="tooltip-value">${pond.fish_quantity ? pond.fish_quantity.toLocaleString() + ' ตัว' : '-'}</span>
            </div>
            <div class="tooltip-row">
              <span class="tooltip-label">อายุปลา:</span>
              <span class="tooltip-value">${pond.fish_age_days || 0} วัน</span>
            </div>
          `;
        }

        tooltip.innerHTML = html;
        tooltip.style.display = 'block';
      });

      el.addEventListener('mousemove', function(e) {
        tooltip.style.left = (e.clientX + 15) + 'px';
        tooltip.style.top = (e.clientY + 15) + 'px';
      });

      el.addEventListener('mouseleave', function() {
        tooltip.style.display = 'none';
      });
    });
  </script>
</body>
</html>
