<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ผังบ่อ - ระบบจัดการบ่อเลี้ยงปลา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <style>
    .pond-map-container {
      position: relative;
      width: 100%;
      max-width: 1100px;
      margin: 0 auto;
    }
    .pond-map-container img {
      width: 100%;
      height: auto;
      display: block;
    }
    .pond-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
    }
    .pond-area {
      position: absolute;
      cursor: pointer;
      border-radius: 4px;
      transition: all 0.2s;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 10px;
      font-weight: bold;
      color: white;
      text-shadow: 1px 1px 2px rgba(0,0,0,0.5);
    }
    .pond-area:hover {
      transform: scale(1.05);
      z-index: 10;
      box-shadow: 0 0 10px rgba(255,255,255,0.8);
    }
    .pond-area.available {
      background: rgba(40, 167, 69, 0.7);
      border: 2px solid #28a745;
    }
    .pond-area.occupied {
      background: rgba(220, 53, 69, 0.7);
      border: 2px solid #dc3545;
    }
    .pond-area.pending {
      background: rgba(255, 193, 7, 0.7);
      border: 2px solid #ffc107;
      color: #333;
    }
    .pond-area.maintenance {
      background: rgba(108, 117, 125, 0.7);
      border: 2px solid #6c757d;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark">
      <div class="sidebar-header p-3">
        <h4 class="text-white mb-0">
          <i class="bi bi-water"></i> บ่อเลี้ยงปลา
        </h4>
        <small class="text-muted">คณะประมง</small>
      </div>

      <ul class="list-unstyled components p-3">
        <li class="active">
          <a href="/admin">
            <i class="bi bi-grid-3x3-gap"></i> ผังบ่อ
          </a>
        </li>
        <% if (isLoggedIn) { %>
        <li>
          <a href="/admin/requests">
            <i class="bi bi-clipboard-check"></i> คำขอจอง
            <% if (pendingCount > 0) { %>
              <span class="badge bg-warning text-dark ms-2"><%= pendingCount %></span>
            <% } %>
          </a>
        </li>
        <% } %>
        <li>
          <a href="/admin/active">
            <i class="bi bi-play-circle"></i> กำลังใช้งาน
          </a>
        </li>
        <li>
          <a href="/admin/history">
            <i class="bi bi-clock-history"></i> ประวัติ
          </a>
        </li>
        <% if (isLoggedIn) { %>
        <li>
          <a href="/admin/pond-positions">
            <i class="bi bi-pin-map"></i> จัดตำแหน่งบ่อ
          </a>
        </li>
        <li>
          <a href="/admin/settings">
            <i class="bi bi-gear"></i> ตั้งค่า
          </a>
        </li>
        <% } %>
      </ul>

      <div class="sidebar-footer p-3 border-top border-secondary">
        <% if (isLoggedIn) { %>
        <div class="d-flex align-items-center text-white-50">
          <i class="bi bi-person-circle me-2"></i>
          <span><%= admin.name %></span>
        </div>
        <a href="/admin/logout" class="btn btn-outline-light btn-sm mt-2 w-100">
          <i class="bi bi-box-arrow-right"></i> ออกจากระบบ
        </a>
        <% } else { %>
        <a href="/admin/login" class="btn btn-outline-light btn-sm w-100">
          <i class="bi bi-person-circle me-2"></i>เข้าสู่ระบบ
        </a>
        <% } %>
      </div>
    </nav>

    <!-- Page Content -->
    <div id="content">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark">
            <i class="bi bi-list"></i>
          </button>
          <span class="navbar-brand ms-3 mb-0 h5">
            <i class="bi bi-grid-3x3-gap"></i> ผังบ่อเลี้ยงปลา
          </span>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="container-fluid p-4">
        <!-- Status Summary -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card status-card bg-success text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.available %></h2>
                    <span>บ่อว่าง</span>
                  </div>
                  <i class="bi bi-check-circle status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-danger text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.occupied %></h2>
                    <span>ใช้งาน</span>
                  </div>
                  <i class="bi bi-x-circle status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-warning text-dark">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.pending %></h2>
                    <span>รออนุมัติ</span>
                  </div>
                  <i class="bi bi-hourglass-split status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-secondary text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.maintenance %></h2>
                    <span>ปิดปรับปรุง</span>
                  </div>
                  <i class="bi bi-tools status-icon"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Legend -->
        <div class="card mb-4">
          <div class="card-body py-2">
            <div class="d-flex flex-wrap gap-4">
              <span><span class="legend-dot bg-success"></span> ว่าง</span>
              <span><span class="legend-dot bg-danger"></span> ใช้งาน</span>
              <span><span class="legend-dot bg-warning"></span> รออนุมัติ</span>
              <span><span class="legend-dot bg-secondary"></span> ปิดปรับปรุง</span>
            </div>
          </div>
        </div>

        <!-- Pond Map with Image Background -->
        <div class="card">
          <div class="card-header">
            <span><i class="bi bi-map me-2"></i>ผังบ่อเลี้ยงปลา</span>
            <% if (isLoggedIn) { %>
            <a href="/admin/pond-positions" class="btn btn-sm btn-outline-primary float-end">
              <i class="bi bi-pin-map me-1"></i>จัดตำแหน่งบ่อ
            </a>
            <% } %>
          </div>
          <div class="card-body p-2" style="background: #f0f0f0;">
            <div class="pond-map-container">
              <img src="/images/pond-map-bg.png" alt="ผังบ่อเลี้ยงปลา">
              <div class="pond-overlay">
                <%
                // ตำแหน่งบ่อ (hardcoded เพื่อไม่ให้เปลี่ยนเมื่อ deploy ใหม่)
                const defaultPositions = {
                  'A4': { left: 2.36, top: 13.5, width: 8, height: 8 },
                  'A3': { left: 12.45, top: 13.37, width: 10, height: 8 },
