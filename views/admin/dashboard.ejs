                  'C1': { left: 51.45, top: 42.66, width: 2 },
                  'C14': { left: 12.82, top: 52.86, width: 2 },
                  'C13': { left: 18, top: 52.74, width: 2 },
                  'C12': { left: 23.09, top: 52.74, width: 2 },
                  'C11': { left: 31.09, top: 52.81, width: 2 },
                  'C10': { left: 36.09, top: 52.81, width: 2 },
                  'C9': { left: 41.18, top: 52.94, width: 2 },
                  'C8': { left: 46.27, top: 52.81, width: 2 },
                  'C7': { left: 51.27, top: 52.94, width: 2 },
                  'D5': { left: 27.18, top: 64.97, width: 2 },
                  'D4': { left: 31.55, top: 64.59, width: 2 },
                  'D3': { left: 36.09, top: 64.97, width: 2 },
                  'D2': { left: 40.45, top: 64.97, width: 2 },
                  'D1': { left: 47.27, top: 65.35, width: 2 },
