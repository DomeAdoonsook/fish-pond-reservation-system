                  'B5': { left: 18.27, top: 28.45, width: 2 },
                  'B4': { left: 22.64, top: 28.45, width: 2 },
                  'B3': { left: 29.55, top: 28.60, width: 2 },
                  'B2': { left: 36.45, top: 28.47, width: 2 },
                  'B1': { left: 47.82, top: 28.85, width: 2 },
