<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ผังบ่อ - ระบบจัดการบ่อเลี้ยงปลา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar -->
    <nav id="sidebar" class="bg-dark">
      <div class="sidebar-header p-3">
        <h4 class="text-white mb-0">
          <i class="bi bi-water"></i> บ่อเลี้ยงปลา
        </h4>
        <small class="text-muted">คณะประมง</small>
      </div>

      <ul class="list-unstyled components p-3">
        <li class="active">
          <a href="/admin">
            <i class="bi bi-grid-3x3-gap"></i> ผังบ่อ
          </a>
        </li>
        <li>
          <a href="/admin/requests">
            <i class="bi bi-clipboard-check"></i> คำขอจอง
            <% if (pendingCount > 0) { %>
              <span class="badge bg-warning text-dark ms-2"><%= pendingCount %></span>
            <% } %>
          </a>
        </li>
        <li>
          <a href="/admin/active">
            <i class="bi bi-play-circle"></i> กำลังใช้งาน
          </a>
        </li>
        <li>
          <a href="/admin/history">
            <i class="bi bi-clock-history"></i> ประวัติ
          </a>
        </li>
        <li>
          <a href="/admin/settings">
            <i class="bi bi-gear"></i> ตั้งค่า
          </a>
        </li>
      </ul>

      <div class="sidebar-footer p-3 border-top border-secondary">
        <div class="d-flex align-items-center text-white-50">
          <i class="bi bi-person-circle me-2"></i>
          <span><%= admin.name %></span>
        </div>
        <a href="/admin/logout" class="btn btn-outline-light btn-sm mt-2 w-100">
          <i class="bi bi-box-arrow-right"></i> ออกจากระบบ
        </a>
      </div>
    </nav>

    <!-- Page Content -->
    <div id="content">
      <!-- Top Navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark">
            <i class="bi bi-list"></i>
          </button>
          <span class="navbar-brand ms-3 mb-0 h5">
            <i class="bi bi-grid-3x3-gap"></i> ผังบ่อเลี้ยงปลา
          </span>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="container-fluid p-4">
        <!-- Status Summary -->
        <div class="row mb-4">
          <div class="col-md-3">
            <div class="card status-card bg-success text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.available %></h2>
                    <span>บ่อว่าง</span>
                  </div>
                  <i class="bi bi-check-circle status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-danger text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.occupied %></h2>
                    <span>ใช้งาน</span>
                  </div>
                  <i class="bi bi-x-circle status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-warning text-dark">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.pending %></h2>
                    <span>รออนุมัติ</span>
                  </div>
                  <i class="bi bi-hourglass-split status-icon"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-3">
            <div class="card status-card bg-secondary text-white">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h2 class="mb-0"><%= status.maintenance %></h2>
                    <span>ปิดปรับปรุง</span>
                  </div>
                  <i class="bi bi-tools status-icon"></i>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Legend -->
        <div class="card mb-4">
          <div class="card-body py-2">
            <div class="d-flex flex-wrap gap-4">
              <span><span class="legend-dot bg-success"></span> ว่าง</span>
              <span><span class="legend-dot bg-danger"></span> ใช้งาน</span>
              <span><span class="legend-dot bg-warning"></span> รออนุมัติ</span>
              <span><span class="legend-dot bg-secondary"></span> ปิดปรับปรุง</span>
            </div>
          </div>
        </div>

        <!-- Pond Map -->
        <div class="card">
          <div class="card-header">
            <span><i class="bi bi-map me-2"></i>ผังบ่อเลี้ยงปลา</span>
          </div>
          <div class="card-body">
            <div class="pond-layout">
              <!-- Left Section: Zone A, B, C, D -->
              <div class="pond-section-left">
                <!-- Zone A: Row 1 -->
                <div class="pond-row">
                  <% const zoneA = ponds.filter(p => p.zone === 'A').sort((a,b) => {
                    const numA = parseInt(a.pond_code.replace('A',''));
                    const numB = parseInt(b.pond_code.replace('A',''));
                    return numA - numB;
                  }); %>
                  <% [4,3,2,1].forEach(function(num) {
                    const pond = zoneA.find(p => p.pond_code === 'A' + num);
                    if (pond) { %>
                    <div class="pond-box <%= num === 1 ? 'pond-large' : (num === 3 ? 'pond-medium' : 'pond-small') %> <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>

                <!-- Zone B: Row 2 -->
                <div class="pond-row">
                  <% const zoneB = ponds.filter(p => p.zone === 'B'); %>
                  <% [7,6,5,4,3,2,1].forEach(function(num) {
                    const pond = zoneB.find(p => p.pond_code === 'B' + num);
                    if (pond) { %>
                    <div class="pond-box pond-small <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>

                <!-- Zone C: Rows 3-5 -->
                <div class="pond-row">
                  <% const zoneC = ponds.filter(p => p.zone === 'C'); %>
                  <% [6,5,4,3,2,1].forEach(function(num) {
                    const pond = zoneC.find(p => p.pond_code === 'C' + num);
                    if (pond) { %>
                    <div class="pond-box pond-small <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>
                <div class="pond-row">
                  <% [14,13,12,11,10,9,8,7].forEach(function(num) {
                    const pond = zoneC.find(p => p.pond_code === 'C' + num);
                    if (pond) { %>
                    <div class="pond-box pond-small <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>

                <!-- Zone D: Row 6 -->
                <div class="pond-row">
                  <% const zoneD = ponds.filter(p => p.zone === 'D'); %>
                  <% [6,5,4,3,2,1].forEach(function(num) {
                    const pond = zoneD.find(p => p.pond_code === 'D' + num);
                    if (pond) { %>
                    <div class="pond-box pond-small <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>
              </div>

              <!-- Right Section: Zone F, G, E -->
              <div class="pond-section-right">
                <!-- Zone F (vertical) & Zone G -->
                <div class="pond-right-top">
                  <div class="pond-col zone-f">
                    <% const zoneF = ponds.filter(p => p.zone === 'F'); %>
                    <% [8,7,6,5,4,3,2,1].forEach(function(num) {
                      const pond = zoneF.find(p => p.pond_code === 'F' + num);
                      if (pond) { %>
                      <div class="pond-box pond-tiny <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                           onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                        <div class="pond-code"><%= pond.pond_code %></div>
                      </div>
                    <% }}); %>
                  </div>
                  <div class="pond-col zone-g">
                    <div class="pond-row-g">
                      <% const zoneG = ponds.filter(p => p.zone === 'G'); %>
                      <% [1,2,3,4,5,6,7,8,10].forEach(function(num) {
                        const pond = zoneG.find(p => p.pond_code === 'G' + num);
                        if (pond) { %>
                        <div class="pond-box pond-tiny <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                             onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                          <div class="pond-code"><%= pond.pond_code %></div>
                        </div>
                      <% }}); %>
                    </div>
                  </div>
                </div>

                <!-- Zone E (bottom right) -->
                <div class="pond-row zone-e">
                  <% const zoneE = ponds.filter(p => p.zone === 'E'); %>
                  <% [1,2,3,4,5].forEach(function(num) {
                    const pond = zoneE.find(p => p.pond_code === 'E' + num);
                    if (pond) { %>
                    <div class="pond-box pond-small <%= pond.user_name ? 'occupied' : (pond.status === 'maintenance' ? 'maintenance' : 'available') %>"
                         onclick="showPondModal(<%= pond.id %>)" data-pond-id="<%= pond.id %>">
                      <div class="pond-code"><%= pond.pond_code %></div>
                      <% if (pond.user_name) { %><div class="pond-info"><small><%= pond.fish_type %></small></div><% } %>
                    </div>
                  <% }}); %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Pond Detail Modal -->
        <div class="modal fade" id="pondModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">
                  <i class="bi bi-droplet me-2"></i>
                  <span id="modalPondCode">บ่อ</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body" id="modalPondBody">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ปิด</button>
                <a href="#" class="btn btn-primary" id="modalViewDetail">ดูรายละเอียด</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    const pondsData = <%- JSON.stringify(ponds) %>;
  </script>
  <script src="/js/pond-map.js"></script>
</body>
</html>
