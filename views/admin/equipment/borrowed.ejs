<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>กำลังยืม - ระบบจัดการบ่อเลี้ยงปลา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="wrapper">
    <%- include('../../partials/sidebar-admin', { page: 'equipment-borrowed', isLoggedIn: true, admin, pendingCount, cancelPendingCount: cancelPendingCount || 0, equipmentPendingCount: equipmentPendingCount || 0 }) %>

    <div id="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark"><i class="bi bi-list"></i></button>
          <span class="navbar-brand ms-3 mb-0 h5"><i class="bi bi-box-arrow-right"></i> กำลังยืม</span>
        </div>
      </nav>

      <div class="container-fluid p-4">
        <% if (borrowed.length === 0) { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">ไม่มีรายการยืมอุปกรณ์ในขณะนี้</h5>
            </div>
          </div>
        <% } else { %>
          <div class="row">
            <% borrowed.forEach(function(r) {
              const today = new Date().toISOString().split('T')[0];
              const isOverdue = r.return_date < today;
            %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100" id="borrowed-<%= r.id %>">
                  <div class="card-header <%= isOverdue ? 'bg-danger' : 'bg-info' %> text-white">
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="fw-bold">#EQ-<%= String(r.id).padStart(4, '0') %></span>
                      <% if (isOverdue) { %>
                        <span class="badge bg-light text-danger">เลยกำหนด!</span>
                      <% } else { %>
                        <span class="badge bg-light text-dark">กำลังยืม</span>
                      <% } %>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person text-primary"></i> <%= r.user_name %></h5>
                    <hr>
                    <table class="table table-sm table-borderless mb-0">
                      <tr><td class="text-muted" width="40%">วันที่ยืม:</td><td><%= r.borrow_date %></td></tr>
                      <tr>
                        <td class="text-muted">กำหนดคืน:</td>
                        <td class="<%= isOverdue ? 'text-danger fw-bold' : '' %>"><%= r.return_date %></td>
                      </tr>
                      <% if (r.phone) { %>
                        <tr><td class="text-muted">โทรติดต่อ:</td><td><%= r.phone %></td></tr>
                      <% } %>
                    </table>
                    <hr>
                    <div class="mb-2"><strong>รายการอุปกรณ์:</strong></div>
                    <ul class="list-group list-group-flush">
                      <% if (r.items && r.items.length > 0) { %>
                        <% r.items.forEach(function(item) {
                          const remaining = item.quantity - (item.returned_quantity || 0);
                        %>
                          <li class="list-group-item d-flex justify-content-between align-items-center py-2 px-0">
                            <span><%= item.equipment_name %></span>
                            <div>
                              <% if (remaining > 0) { %>
                                <span class="badge bg-warning text-dark">ยังไม่คืน <%= remaining %></span>
                              <% } else { %>
                                <span class="badge bg-success">คืนครบ</span>
                              <% } %>
                            </div>
                          </li>
                        <% }); %>
                      <% } %>
                    </ul>
                  </div>
                  <div class="card-footer">
                    <button class="btn btn-success w-100" onclick="showReturnModal(<%= r.id %>, <%= JSON.stringify(r.items || []).replace(/"/g, '&quot;') %>)">
                      <i class="bi bi-box-arrow-in-left"></i> บันทึกการคืน
                    </button>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>

        <!-- Return Modal -->
        <div class="modal fade" id="returnModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="bi bi-box-arrow-in-left me-2"></i>บันทึกการคืนอุปกรณ์</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <input type="hidden" id="returnId">
                <div id="returnItemsList"></div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-success" onclick="submitReturn()">
                  <i class="bi bi-check-lg"></i> บันทึกการคืน
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    let currentItems = [];

    function showReturnModal(id, items) {
      document.getElementById('returnId').value = id;
      currentItems = items;

      let html = '';
      items.forEach(item => {
        const remaining = item.quantity - (item.returned_quantity || 0);
        if (remaining > 0) {
          html += `
            <div class="mb-3">
              <label class="form-label">${item.equipment_name} (ยังไม่คืน ${remaining} ${item.unit})</label>
              <input type="number" class="form-control return-qty"
                data-equipment-id="${item.equipment_id}"
                data-max="${remaining}"
                min="0" max="${remaining}" value="${remaining}">
            </div>
          `;
        }
      });

      if (!html) {
        html = '<div class="alert alert-success">คืนอุปกรณ์ครบทุกรายการแล้ว</div>';
      }

      document.getElementById('returnItemsList').innerHTML = html;
      new bootstrap.Modal(document.getElementById('returnModal')).show();
    }

    async function submitReturn() {
      const id = document.getElementById('returnId').value;
      const inputs = document.querySelectorAll('.return-qty');
      const items = [];

      inputs.forEach(input => {
        const qty = parseInt(input.value) || 0;
        if (qty > 0) {
          items.push({
            equipment_id: parseInt(input.dataset.equipmentId),
            returned_quantity: qty
          });
        }
      });

      if (items.length === 0) {
        showToast('กรุณาระบุจำนวนที่คืน', 'warning');
        return;
      }

      try {
        const res = await fetch('/admin/equipment/borrowed/' + id + '/return', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ items })
        });
        const data = await res.json();
        if (data.success) {
          bootstrap.Modal.getInstance(document.getElementById('returnModal')).hide();
          showToast('บันทึกการคืนเรียบร้อย', 'success');
          setTimeout(() => location.reload(), 1000);
        } else {
          showToast(data.error || 'เกิดข้อผิดพลาด', 'danger');
        }
      } catch (err) {
        showToast('เกิดข้อผิดพลาด', 'danger');
      }
    }
  </script>
</body>
</html>
