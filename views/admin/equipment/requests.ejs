<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>คำขอยืมอุปกรณ์ - ระบบจัดการบ่อเลี้ยงปลา</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
</head>
<body>
  <div class="wrapper">
    <%- include('../../partials/sidebar-admin', { page: 'equipment-requests', isLoggedIn: true, admin, pendingCount, cancelPendingCount: cancelPendingCount || 0, equipmentPendingCount: equipmentPendingCount || 0 }) %>

    <div id="content">
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-dark"><i class="bi bi-list"></i></button>
          <span class="navbar-brand ms-3 mb-0 h5"><i class="bi bi-clipboard-check"></i> คำขอยืมอุปกรณ์</span>
        </div>
      </nav>

      <div class="container-fluid p-4">
        <% if (requests.length === 0) { %>
          <div class="card">
            <div class="card-body text-center py-5">
              <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">ไม่มีคำขอยืมอุปกรณ์ที่รอดำเนินการ</h5>
            </div>
          </div>
        <% } else { %>
          <div class="row">
            <% requests.forEach(function(r) { %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 equipment-request-card" id="eq-request-<%= r.id %>">
                  <div class="card-header bg-warning text-dark">
                    <div class="d-flex justify-content-between align-items-center">
                      <span class="fw-bold">#EQ-<%= String(r.id).padStart(4, '0') %></span>
                      <span class="badge bg-light text-dark">รออนุมัติ</span>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-person text-primary"></i> <%= r.user_name %></h5>
                    <hr>
                    <table class="table table-sm table-borderless mb-0">
                      <tr><td class="text-muted" width="40%">วันที่ยืม:</td><td class="fw-bold"><%= r.borrow_date %></td></tr>
                      <tr><td class="text-muted">วันที่คืน:</td><td class="fw-bold"><%= r.return_date %></td></tr>
                      <% if (r.phone) { %>
                        <tr><td class="text-muted">โทรติดต่อ:</td><td><%= r.phone %></td></tr>
                      <% } %>
                    </table>
                    <% if (r.purpose) { %>
                      <hr>
                      <div class="text-muted small">
                        <strong>วัตถุประสงค์:</strong> <%= r.purpose %>
                      </div>
                    <% } %>
                    <hr>
                    <div class="mb-2"><strong>รายการอุปกรณ์:</strong></div>
                    <ul class="list-group list-group-flush">
                      <% if (r.items && r.items.length > 0) { %>
                        <% r.items.forEach(function(item) { %>
                          <li class="list-group-item d-flex justify-content-between align-items-center py-1 px-0">
                            <span><%= item.equipment_name %></span>
                            <span class="badge bg-primary"><%= item.quantity %> <%= item.unit %></span>
                          </li>
                        <% }); %>
                      <% } else { %>
                        <li class="list-group-item text-muted py-1 px-0">ไม่มีรายการ</li>
                      <% } %>
                    </ul>
                  </div>
                  <div class="card-footer">
                    <div class="d-flex gap-2">
                      <button class="btn btn-success flex-fill" onclick="approveRequest(<%= r.id %>)">
                        <i class="bi bi-check-lg"></i> อนุมัติ
                      </button>
                      <button class="btn btn-danger flex-fill" onclick="showRejectModal(<%= r.id %>)">
                        <i class="bi bi-x-lg"></i> ปฏิเสธ
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>

        <!-- Reject Modal -->
        <div class="modal fade" id="rejectModal" tabindex="-1">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>ปฏิเสธคำขอยืม</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
              </div>
              <div class="modal-body">
                <input type="hidden" id="rejectId">
                <div class="mb-3">
                  <label class="form-label">เหตุผล (ถ้ามี)</label>
                  <textarea class="form-control" id="rejectReason" rows="3" placeholder="ระบุเหตุผลที่ปฏิเสธ..."></textarea>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ยกเลิก</button>
                <button type="button" class="btn btn-danger" onclick="rejectRequest()">
                  <i class="bi bi-x-lg"></i> ยืนยันปฏิเสธ
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    async function approveRequest(id) {
      if (!confirm('ยืนยันการอนุมัติคำขอยืมอุปกรณ์?')) return;
      try {
        const res = await fetch('/admin/equipment/requests/' + id + '/approve', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' }
        });
        const data = await res.json();
        if (data.success) {
          document.getElementById('eq-request-' + id).remove();
          showToast('อนุมัติคำขอเรียบร้อย', 'success');
          updateEquipmentPendingCount();
        } else {
          showToast(data.error || 'เกิดข้อผิดพลาด', 'danger');
        }
      } catch (err) {
        showToast('เกิดข้อผิดพลาด', 'danger');
      }
    }

    function showRejectModal(id) {
      document.getElementById('rejectId').value = id;
      document.getElementById('rejectReason').value = '';
      new bootstrap.Modal(document.getElementById('rejectModal')).show();
    }

    async function rejectRequest() {
      const id = document.getElementById('rejectId').value;
      const reason = document.getElementById('rejectReason').value;
      try {
        const res = await fetch('/admin/equipment/requests/' + id + '/reject', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ reason })
        });
        const data = await res.json();
        if (data.success) {
          bootstrap.Modal.getInstance(document.getElementById('rejectModal')).hide();
          document.getElementById('eq-request-' + id).remove();
          showToast('ปฏิเสธคำขอเรียบร้อย', 'warning');
          updateEquipmentPendingCount();
        } else {
          showToast(data.error || 'เกิดข้อผิดพลาด', 'danger');
        }
      } catch (err) {
        showToast('เกิดข้อผิดพลาด', 'danger');
      }
    }

    function updateEquipmentPendingCount() {
      const badge = document.querySelector('a[href="/admin/equipment/requests"] .badge');
      const cards = document.querySelectorAll('.equipment-request-card');
      if (badge) {
        if (cards.length > 0) {
          badge.textContent = cards.length;
        } else {
          badge.remove();
          location.reload();
        }
      }
    }
  </script>
</body>
</html>
