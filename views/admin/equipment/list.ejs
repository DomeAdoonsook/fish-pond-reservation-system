<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>รายการอุปกรณ์ - ระบบงานฟาร์ม</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
      min-height: 100vh;
    }
    .page-header {
      background: linear-gradient(135deg, #ff9800, #f57c00);
      color: white;
      padding: 25px 30px;
      border-radius: 0 0 20px 20px;
      margin-bottom: 25px;
    }
    .back-btn {
      background: rgba(255,255,255,0.2);
      color: white;
      padding: 8px 16px;
      border-radius: 50px;
      text-decoration: none;
      font-size: 0.9rem;
    }
    .back-btn:hover {
      background: rgba(255,255,255,0.3);
      color: white;
    }
  </style>
</head>
<body>
  <div class="container-fluid px-0">
    <!-- Header -->
    <div class="page-header">
      <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <a href="/admin/equipment" class="back-btn mb-2 d-inline-block">
              <i class="bi bi-arrow-left me-1"></i>กลับ
            </a>
            <h2 class="mb-1"><i class="bi bi-box-seam me-2"></i>รายการอุปกรณ์</h2>
            <p class="mb-0 opacity-75">เพิ่ม แก้ไข ลบ อุปกรณ์</p>
          </div>
          <div>
            <button class="btn btn-light btn-sm me-2" data-bs-toggle="modal" data-bs-target="#categoryModal">
              <i class="bi bi-folder-plus"></i> จัดการหมวดหมู่
            </button>
            <a href="/admin/equipment/add" class="btn btn-warning btn-sm">
              <i class="bi bi-plus-lg"></i> เพิ่มอุปกรณ์
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="container pb-4">
      <% if (typeof success !== 'undefined' || typeof error !== 'undefined') { %>
        <% if (success === 'added') { %>
          <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i>เพิ่มอุปกรณ์เรียบร้อย<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        <% } else if (success === 'updated') { %>
          <div class="alert alert-success alert-dismissible fade show"><i class="bi bi-check-circle me-2"></i>แก้ไขอุปกรณ์เรียบร้อย<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
        <% } %>
      <% } %>

      <% if (equipment.length === 0) { %>
        <div class="card">
          <div class="card-body text-center py-5">
            <i class="bi bi-tools text-muted" style="font-size: 4rem;"></i>
            <h5 class="mt-3 text-muted">ยังไม่มีรายการอุปกรณ์</h5>
            <a href="/admin/equipment/add" class="btn btn-primary mt-3"><i class="bi bi-plus-lg me-2"></i>เพิ่มอุปกรณ์</a>
          </div>
        </div>
      <% } else { %>
        <div class="card mb-4">
          <div class="card-body">
            <div class="row g-3">
              <div class="col-md-4">
                <label class="form-label">หมวดหมู่</label>
                <select class="form-select" id="filterCategory" onchange="filterTable()">
                  <option value="">ทั้งหมด</option>
                  <% categories.forEach(function(c) { %>
                    <option value="<%= c.id %>"><%= c.name %></option>
                  <% }); %>
                  <option value="none">ไม่มีหมวดหมู่</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">สถานะ</label>
                <select class="form-select" id="filterStatus" onchange="filterTable()">
                  <option value="">ทั้งหมด</option>
                  <option value="active">ใช้งาน</option>
                  <option value="inactive">ปิดใช้งาน</option>
                </select>
              </div>
              <div class="col-md-4">
                <label class="form-label">ค้นหา</label>
                <input type="text" class="form-control" id="filterSearch" placeholder="ค้นหาชื่ออุปกรณ์..." oninput="filterTable()">
              </div>
            </div>
          </div>
        </div>

        <div class="table-responsive">
          <table class="table table-hover bg-white rounded shadow-sm" id="equipmentTable">
            <thead class="table-dark">
              <tr>
                <th>ชื่ออุปกรณ์</th>
                <th>หมวดหมู่</th>
                <th class="text-center">จำนวนทั้งหมด</th>
                <th class="text-center">ยืมอยู่</th>
                <th class="text-center">ว่าง</th>
                <th>หน่วย</th>
                <th>สถานะ</th>
                <th class="text-center">จัดการ</th>
              </tr>
            </thead>
            <tbody>
              <% equipment.forEach(function(eq) { %>
                <tr data-category="<%= eq.category_id || 'none' %>" data-status="<%= eq.status %>">
                  <td class="fw-bold"><%= eq.name %></td>
                  <td><%= eq.category_name || '-' %></td>
                  <td class="text-center"><%= eq.total_quantity %></td>
                  <td class="text-center text-danger"><%= eq.borrowed_quantity || 0 %></td>
                  <td class="text-center text-success fw-bold"><%= eq.available_quantity %></td>
                  <td><%= eq.unit %></td>
                  <td>
                    <% if (eq.status === 'active') { %>
                      <span class="badge bg-success">ใช้งาน</span>
                    <% } else { %>
                      <span class="badge bg-secondary">ปิดใช้งาน</span>
                    <% } %>
                  </td>
                  <td class="text-center">
                    <a href="/admin/equipment/<%= eq.id %>/edit" class="btn btn-warning btn-sm">
                      <i class="bi bi-pencil"></i>
                    </a>
                    <button class="btn btn-danger btn-sm" onclick="deleteEquipment(<%= eq.id %>, '<%= eq.name %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

  <!-- Category Modal -->
  <div class="modal fade" id="categoryModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-dark text-white">
          <h5 class="modal-title"><i class="bi bi-folder me-2"></i>จัดการหมวดหมู่อุปกรณ์</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="addCategoryForm" class="mb-4">
            <div class="row g-2">
              <div class="col-md-5">
                <input type="text" class="form-control" id="newCategoryName" placeholder="ชื่อหมวดหมู่" required>
              </div>
              <div class="col-md-5">
                <input type="text" class="form-control" id="newCategoryDesc" placeholder="คำอธิบาย (ไม่บังคับ)">
              </div>
              <div class="col-md-2">
                <button type="submit" class="btn btn-success w-100"><i class="bi bi-plus-lg"></i></button>
              </div>
            </div>
          </form>
          <table class="table table-sm" id="categoryTable">
            <thead class="table-light">
              <tr>
                <th>ชื่อหมวดหมู่</th>
                <th>คำอธิบาย</th>
                <th class="text-center">จำนวน</th>
                <th class="text-center">จัดการ</th>
              </tr>
            </thead>
            <tbody>
              <% categories.forEach(function(c) { %>
                <tr>
                  <td><%= c.name %></td>
                  <td class="text-muted"><%= c.description || '-' %></td>
                  <td class="text-center"><%= c.equipment_count || 0 %></td>
                  <td class="text-center">
                    <button class="btn btn-warning btn-sm" onclick="editCategory(<%= c.id %>, '<%= c.name %>', '<%= c.description || '' %>')">
                      <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-danger btn-sm" onclick="deleteCategory(<%= c.id %>, '<%= c.name %>')">
                      <i class="bi bi-trash"></i>
                    </button>
                  </td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function filterTable() {
      const category = document.getElementById('filterCategory').value;
      const status = document.getElementById('filterStatus').value;
      const search = document.getElementById('filterSearch').value.toLowerCase();
      const rows = document.querySelectorAll('#equipmentTable tbody tr');
      rows.forEach(row => {
        const rowCategory = row.dataset.category;
        const rowStatus = row.dataset.status;
        const rowText = row.textContent.toLowerCase();
        const matchCategory = !category || rowCategory === category;
        const matchStatus = !status || rowStatus === status;
        const matchSearch = !search || rowText.includes(search);
        row.style.display = (matchCategory && matchStatus && matchSearch) ? '' : 'none';
      });
    }

    async function deleteEquipment(id, name) {
      if (!confirm(`ยืนยันการลบอุปกรณ์ "${name}"?`)) return;
      try {
        const res = await fetch('/admin/equipment/' + id + '/delete', { method: 'POST' });
        const data = await res.json();
        if (data.success) location.reload();
        else alert(data.error || 'ไม่สามารถลบได้');
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    }

    document.getElementById('addCategoryForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const name = document.getElementById('newCategoryName').value;
      const description = document.getElementById('newCategoryDesc').value;
      try {
        const res = await fetch('/admin/equipment/categories/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, description })
        });
        const data = await res.json();
        if (data.success) location.reload();
        else alert(data.error || 'ไม่สามารถเพิ่มได้');
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    });

    function editCategory(id, name, desc) {
      const newName = prompt('ชื่อหมวดหมู่:', name);
      if (!newName) return;
      const newDesc = prompt('คำอธิบาย:', desc);
      fetch('/admin/equipment/categories/' + id + '/edit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ name: newName, description: newDesc })
      }).then(res => res.json()).then(data => {
        if (data.success) location.reload();
        else alert(data.error || 'ไม่สามารถแก้ไขได้');
      });
    }

    async function deleteCategory(id, name) {
      if (!confirm(`ยืนยันการลบหมวดหมู่ "${name}"?`)) return;
      try {
        const res = await fetch('/admin/equipment/categories/' + id + '/delete', { method: 'POST' });
        const data = await res.json();
        if (data.success) location.reload();
        else alert(data.error || 'ไม่สามารถลบได้');
      } catch (err) {
        alert('เกิดข้อผิดพลาด');
      }
    }
  </script>
</body>
</html>
