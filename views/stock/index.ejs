<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - ระบบงานฟาร์ม</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Sarabun:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <style>
    .stock-card {
      transition: transform 0.2s, box-shadow 0.2s;
      border-left: 4px solid #198754;
    }
    .stock-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 5px 20px rgba(0,0,0,0.1);
    }
    .stock-card.low-stock {
      border-left-color: #dc3545;
    }
    .stock-card.warning-stock {
      border-left-color: #ffc107;
    }
    .quantity-badge {
      font-size: 1.2rem;
      font-weight: 700;
    }
    .category-header {
      background: linear-gradient(135deg, #198754, #20c997);
      color: white;
      padding: 10px 20px;
      border-radius: 10px;
      margin-bottom: 15px;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <%- include('../partials/sidebar-stock') %>

    <div id="content">
      <!-- Top navbar -->
      <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container-fluid">
          <button type="button" id="sidebarCollapse" class="btn btn-success">
            <i class="bi bi-list"></i>
          </button>
          <span class="navbar-text ms-3">
            <i class="bi bi-boxes me-2"></i>รายการวัสดุ
          </span>
          <div class="ms-auto">
            <a href="/stock/request" class="btn btn-success">
              <i class="bi bi-cart-plus me-2"></i>ขอเบิกวัสดุ
            </a>
          </div>
        </div>
      </nav>

      <div class="container-fluid py-4">
        <!-- Search -->
        <div class="row mb-4">
          <div class="col-md-6">
            <div class="input-group">
              <span class="input-group-text"><i class="bi bi-search"></i></span>
              <input type="text" class="form-control" id="searchInput" placeholder="ค้นหาวัสดุ...">
            </div>
          </div>
          <div class="col-md-6 text-end">
            <span class="text-muted">รวม <%= items.length %> รายการ</span>
          </div>
        </div>

        <!-- Items by Category -->
        <% Object.keys(itemsByCategory).forEach(function(catName) { %>
          <div class="category-section mb-4" data-category="<%= catName %>">
            <div class="category-header">
              <i class="bi bi-folder me-2"></i><%= catName %>
              <span class="badge bg-light text-dark ms-2"><%= itemsByCategory[catName].length %> รายการ</span>
            </div>
            <div class="row g-3">
              <% itemsByCategory[catName].forEach(function(item) {
                let stockClass = '';
                if (item.min_quantity > 0 && item.current_quantity <= item.min_quantity) {
                  stockClass = 'low-stock';
                } else if (item.min_quantity > 0 && item.current_quantity <= item.min_quantity * 1.5) {
                  stockClass = 'warning-stock';
                }
              %>
                <div class="col-md-6 col-lg-4 item-card" data-name="<%= item.name.toLowerCase() %>">
                  <div class="card stock-card h-100 <%= stockClass %>">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start">
                        <div>
                          <h5 class="card-title mb-1"><%= item.name %></h5>
                          <p class="text-muted mb-2 small"><%= item.category_name || 'ไม่ระบุหมวดหมู่' %></p>
                        </div>
                        <div class="text-end">
                          <div class="quantity-badge <%= stockClass === 'low-stock' ? 'text-danger' : (stockClass === 'warning-stock' ? 'text-warning' : 'text-success') %>">
                            <%= item.current_quantity.toLocaleString() %>
                          </div>
                          <small class="text-muted"><%= item.unit %></small>
                        </div>
                      </div>
                      <% if (item.description) { %>
                        <p class="card-text small text-muted mt-2"><%= item.description %></p>
                      <% } %>
                      <div class="mt-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted">
                          <i class="bi bi-tag me-1"></i>
                          <%= item.unit_price ? item.unit_price.toLocaleString() + ' บาท/' + item.unit : '-' %>
                        </small>
                        <% if (stockClass === 'low-stock') { %>
                          <span class="badge bg-danger"><i class="bi bi-exclamation-triangle me-1"></i>ใกล้หมด</span>
                        <% } else if (stockClass === 'warning-stock') { %>
                          <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-circle me-1"></i>เหลือน้อย</span>
                        <% } else if (item.current_quantity > 0) { %>
                          <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>พร้อมใช้</span>
                        <% } else { %>
                          <span class="badge bg-secondary">หมด</span>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        <% }); %>

        <% if (items.length === 0) { %>
          <div class="text-center py-5">
            <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
            <p class="text-muted mt-3">ยังไม่มีรายการวัสดุในระบบ</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Sidebar toggle
    document.getElementById('sidebarCollapse').addEventListener('click', function() {
      document.getElementById('sidebar').classList.toggle('active');
    });

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function() {
      const query = this.value.toLowerCase();
      document.querySelectorAll('.item-card').forEach(card => {
        const name = card.dataset.name;
        if (name.includes(query)) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });

      // Hide empty categories
      document.querySelectorAll('.category-section').forEach(section => {
        const visibleCards = section.querySelectorAll('.item-card[style=""]').length +
                           section.querySelectorAll('.item-card:not([style])').length;
        section.style.display = visibleCards > 0 ? '' : 'none';
      });
    });
  </script>
</body>
</html>
